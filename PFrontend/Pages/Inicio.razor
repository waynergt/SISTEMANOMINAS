@page "/inicio"
@inject NavigationManager Navigation

<div class="container py-5">
    <div class="text-center mb-4">
        <img src="logo.png" alt="Logo" style="max-width:120px; border-radius:50%; box-shadow:0 2px 10px #20264133;" />
        <h1 class="mt-3" style="color:#202641;">¡Bienvenido al Sistema!</h1>
        <p class="lead" style="color:#457b9d;">
            Sistema de Nominas y Gestión de Recursos Humanos
        </p>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm mi-card-resumen h-100 text-center">
                <div class="card-body">
                    <i class="bi bi-people-fill" style="font-size:2.5rem; color:#457b9d;"></i>
                    <h5 class="card-title mt-2">Empleados</h5>
                    <button class="btn btn-primary mt-2" @onclick="@(()=> Navigation.NavigateTo("/empleados"))">
                        Ver Empleados
                    </button>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm mi-card-resumen h-100 text-center">
                <div class="card-body">
                    <i class="bi bi-cash-coin" style="font-size:2.5rem; color:#43aa8b;"></i>
                    <h5 class="card-title mt-2">Nómina</h5>
                    <button class="btn btn-success mt-2" @onclick="@(()=> Navigation.NavigateTo("/nomina"))">
                        Ir a Nómina
                    </button>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm mi-card-resumen h-100 text-center">
                <div class="card-body">
                    <i class="bi bi-bar-chart-line-fill" style="font-size:2.5rem; color:#f9a825;"></i>
                    <h5 class="card-title mt-2">Reportes</h5>
                    <button class="btn btn-warning mt-2" style="color:white;" @onclick="@(()=> Navigation.NavigateTo("/reportes"))">
                        Ver Reportes
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>