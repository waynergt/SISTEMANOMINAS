@inherits LayoutComponentBase

<div class="main-layout-header d-flex align-items-center p-2" style="background:#202641;height:56px;">
    <img src="logo.png" alt="Logo" style="width:38px;height:38px;border-radius:50%;box-shadow:0 2px 10px #20264133;margin-right:10px;" />
    <span class="fw-bold text-white" style="font-size:1.2rem;">Sistema de Nominas y Gestión de Recursos Humanos</span>
    <div class="ms-auto">
        <a class="btn d-flex align-items-center justify-content-center"
           href="/integrantes"
           style="background:rgba(255,255,255,0.09); border-radius:50%; height:40px; width:40px; border:none;">
