@inherits LayoutComponentBase
@inject NavigationManager Navigation

<style>
    .about-pill {
        background: #fff;
        color: #3949AB !important;
        border-radius: 1.5rem;
        font-weight: bold;
        box-shadow: 0 2px 10px rgba(57, 73, 171, 0.10);
        padding: 0.5rem 1.2rem;
        margin: 0.2rem 0;
        transition: background 0.2s, color 0.2s;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

        .about-pill:hover, .about-pill.active {
            background: #3949AB;
            color: #FFB300 !important;
            text-decoration: none;
        }

    .about-icon {
        font-size: 1.2rem;
    }
</style>

<div class="main-layout-header d-flex align-items-center p-2" style="background:#202641;height:56px;">
    <img src="logo.png" alt="Logo" style="width:38px;height:38px;border-radius:50%;box-shadow:0 2px 10px #20264133;margin-right:10px;" />
    <span class="fw-bold text-white" style="font-size:1.2rem;">Sistema de Nominas y Gestión de Recursos Humanos</span>
    <div class="ms-auto d-flex align-items-center" style="gap:0.5rem;">
        <NavLink href="/acercade" class="about-pill" ActiveClass="active">
            <i class="bi bi-info-circle about-icon"></i>
            Acerca de
        </NavLink>
        @if (IsInicio)
        {
            <NavLink class="about-pill" href="/logout">
                <i class="bi bi-box-arrow-right"></i> Cerrar Sesión
            </NavLink>
        }
    </div>
</div>


<div>
    @Body
</div>
<CustomAlert />


@code {
    // Propiedad para saber si la ruta actual es "/inicio"
    private bool IsInicio =>
        Navigation.Uri.EndsWith("/inicio") || Navigation.Uri.EndsWith("/inicio/");

    // Si necesitas que funcione con rutas absolutas también, podrías usar:
    // Navigation.ToBaseRelativePath(Navigation.Uri).Equals("inicio", StringComparison.OrdinalIgnoreCase)
}